<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!--
    Для чего нужен web.xml? Для маппинга.
    Здесь мы распишем для Tomcat, какие url-запросы передавать на какие сервлеты.
    -->



    <!-- ////////////////// Register Servlet ////////////////// -->

    <!-- Описание сервлета -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>app.controller.servlets.RegisterServlet</servlet-class>
    </servlet>
    <!-- Привязываем сервлет к адресу -->
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/</url-pattern> <!-- "/" - welcome file address-->
    </servlet-mapping>

    <!-- //////////////////////////////////////////////////////// -->



    <!-- //////////////////// CarList Servlet //////////////////// -->

    <!-- Описание сервлета -->
    <servlet>
        <servlet-name>CarListServlet</servlet-name>
        <servlet-class>app.controller.servlets.CarListServlet</servlet-class>
    </servlet>
    <!-- Привязываем сервлет к адресу -->
    <servlet-mapping>
        <servlet-name>CarListServlet</servlet-name>
        <url-pattern>/car_list</url-pattern>
    </servlet-mapping>

    <!-- //////////////////////////////////////////////////////// -->







    <welcome-file-list>
        <welcome-file>/view/register.jsp</welcome-file>
    </welcome-file-list>






</web-app>